        <h2>나는 누구랑 많이 했을까? - 발로란트</h2>
        <div id="s">
            <input id="search" spellcheck="false" type="text" placeholder="이름#태그">
            <label><input id="ref" type="checkbox" value="ok">전적 갱신</label>
        </div>
        <table>
        </table>
    </div>
    <script>
        $("#search").keydown(e => {
            if (e.keyCode === 13) {
                $(".bc").css({ display: "flex" });
                $("tr").remove();
                $("h3").remove();
                $("p").remove();
                $.ajax({
                    type: 'POST',
                    url: '/api/search',
                    data: {
                        name: $("#search").val(),
                        refresh: $("#ref").is(':checked')
                    }
                }).done(e => {
                    if (e == "err") {
                        $(".container").append(`<p>알 수 없는 유저명입니다.</p>`);
                    }
                    else {
                        for (let i = 0; i < e.filter.length; i++) {
                            $("table").append(`<tr><td>${e.filter[i].count}</td><td>${e.filter[i].user}</td></tr>`);
                        }
                        $(".container").append(`<h3>총 ${e.matchesLen}회의 게임을 조회</h3>`);
                    }
                    $(".bc").css({ display: "none" });
                });
            }
        });
    </script>
